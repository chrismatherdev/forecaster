{
  "name": "forecaster",
  "author": "Chris Mather",
  "description": "A client side weather forecast application",
  "scripts": {
    "format": "eslint src --fix && prettier . --write",
    "lint": "eslint src",
    "dev": "vite",
    "test": "vitest",
    "build": "tsc && vite build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.3",
    "@choc-ui/chakra-autocomplete": "^4.15.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "framer-motion": "^4.1.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "use-debounce": "^7.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@vitejs/plugin-react": "^1.0.7",
    "eslint": "^8.4.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "typescript": "^4.4.4",
    "vite": "^2.9.13",
    "vitest": "^0.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,md,yml,json}": "prettier --write"
  }
}
